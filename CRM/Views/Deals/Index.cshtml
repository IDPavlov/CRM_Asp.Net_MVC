@{
    ViewData["Title"] = "Сделки";
}
@model List<CRM.Models.Deal>
<!-- Явно указываем полный namespace -->

<h2>Сделки</h2>

<p><a asp-action="Create">Добавить сделку</a></p>

@if (Model == null || !Model.Any())
{
    <p>Нет доступных сделок</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Ответственный</th>
                <th>Продукт</th>
                <th>Сумма</th>
                <th>Клиент</th>
                <th>Статус</th>
                <th>Дата</th>
                <th>Удалить?</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var deal in Model)
            {
                <tr>
                    <td>@deal.Manager?.Name</td> <!-- Проверка на null -->
                    <td>@deal.Product?.Name</td>
                    <td>@deal.Amount</td>
                    <td>@deal.Client?.Name</td>
                    <td>@deal.Status?.Name</td>
                    <td>@deal.Date.ToString("dd.MM.yyyy")</td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@deal.Id" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit">Удалить</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

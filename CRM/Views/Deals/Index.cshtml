@{
    ViewData["Title"] = "Клиенты";
}
@model List<Deal>

<h2>Сделки</h2>

<p><a href="Deals/Create">Добавить сделку</a></p>

<form asp-action="Index" method="get">
    <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" />
    <button type="submit">Поиск</button>
</form>

<table>
    <tr>
        <th>Ответственный</th>
        <th>Продукт</th>
        <th>Клиент</th>
        <th>Статус</th>
        <th>Дата</th>
    </tr>
    @foreach (var deal in Model)
    {
        <tr>
            <td>@deal.Manager</td>
            <td>@deal.Product</td>
            <td>@deal.Client</td>
            <td>@deal.Status</td>
            <td>@deal.Date</td>
        </tr>
    }
</table>
